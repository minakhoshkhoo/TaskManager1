<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Taskmanager.Domain"
             Title="Domain"
             BackgroundColor="#87CEEB">
    <StackLayout
        Padding="30">
        <Frame
        BorderColor="#4A4BBA"
            HasShadow="True"
            BackgroundColor="#F7F5FA">

            <Label
            Text="Main Domains"
            FontSize="26"
            HorizontalOptions="Center"/>
        </Frame>
        
        <Button
        Text="Company"
        BackgroundColor="White"
        TextColor="#DDA0DD"
        FontSize="30"
        FontAttributes="Bold"
        CornerRadius="141"
        WidthRequest="328"
        HeightRequest="93"
        Margin="0, 20, 0, 10"
        Clicked="OnCompanyButtonClicked"/>

        
        <Button 
            Text="+" 
            BackgroundColor="#DDA0DD"
            WidthRequest="50" 
            HeightRequest="50" 
            HorizontalOptions="End" 
            VerticalOptions="End"
            Margin="0,20,0,0"
            CornerRadius="50"
            Clicked="OnAddTaskButtonClicked"/>
    </StackLayout>
</ContentPage>